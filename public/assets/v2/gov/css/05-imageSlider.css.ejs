.bcgovHF .constrained {
  margin: 0 auto;
  max-width: 1150px;
  padding: 0 15px 2em;
  position: relative;
}
@media (max-width: 1200px) {
  .bcgovHF .constrained {
    max-width: 970px;
  }
}
@media (max-width: 992px) {
  .bcgovHF .constrained {
    max-width: 750px;
  }
}
.bcgovHF #carousel {
  padding-top: 170px;
  height: 100%;
  width: 100%;
}
.bcgovHF #carousel .controls {
  width: 100%;
  height: 100px;
  top: 0;
}
.bcgovHF .environment-qa #carousel .controls {
  height: 170px;
}
.bcgovHF #carousel .controls .back {
  font-size: 50px;
  color: #fff;
  cursor: pointer;
  text-shadow: 0px 0px 10px #000;
  width: 30px;
  height: 40px;
  position: absolute;
  margin-top: -100px;
  margin-left: -40px;
  background-image: url("<%=unippearHost%><%=thisFileUrlPath%>/../img/arrow_background.png");
  background-position: 60% 50%;
  z-index: 999;
}
.bcgovHF #carousel .controls .forward {
  float: right;
  font-size: 50px;
  color: #fff;
  cursor: pointer;
  text-shadow: 0px 0px 10px #000;
  width: 30px;
  height: 40px;
  margin-top: -100px;
  margin-right: -40px;
  background-image: url("<%=unippearHost%><%=thisFileUrlPath%>/../img/arrow_background.png");
  background-position: 60% 50%;
  -moz-transform: scaleX(-1);
  -o-transform: scaleX(-1);
  -webkit-transform: scaleX(-1);
  -ms-transform: scaleX(-1);
  transform: scaleX(-1);
  -ms-filter: "FlipH";
  filter: FlipH;
  z-index: 999;
}
.bcgovHF .environment-qa #carousel .controls .back,
.bcgovHF .environment-qa #carousel .controls .forward {
  margin-top: -30px;
}
.bcgovHF #carousel .page {
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  display: none;
}
.bcgovHF .environment-qa #carousel .page {
  top: 62px;
}
.bcgovHF #carousel:focus {
  outline: none;
}
.bcgovHF #carousel .page.current {
  display: block;
}
.bcgovHF #carousel .page .background {
  position: relative;
}
.bcgovHF body.environment-qa div#homeTemplate #carousel .page .background .wrapper {
  top: 61px;
}
.bcgovHF body.environment-prod div#homeTemplate #carousel .page .background .wrapper {
  top: 69px;
}
.bcgovHF #carousel .page .background .wrapper {
  position: absolute;
  left: 0;
  width: 100%;
}
.bcgovHF #carousel .page .background .wrapper img {
  width: 100%;
}
.bcgovHF #carousel .page .background .background-fade {
  position: absolute;
  bottom: 0;
  left: 0;
  height: 100%;
  width: 100%;
  background-size: contain;
  background-repeat: repeat-x;
  background-position: center bottom;
  background-image: url("<%=unippearHost%><%=thisFileUrlPath%>/../img/gradient.png");
}
.bcgovHF #carousel .page .content {
  position: relative;
  margin-top: 130px;
}
.bcgovHF #carousel .page .content .wrapper {
  position: absolute;
  top: 10px;
  left: 0;
  height: 100%;
  width: 100%;
  padding: 0 15px;
}
.bcgovHF #carousel .page .content .wrapper div {
  width: 50%;
  background-color: #036; /*For IE*/
  background-color: rgba(0,51,102,0.8);
  color: #fff;
  padding: 15px 30px 30px 15px;
  max-height: 290px;
  overflow: hidden;
  z-index: 100;
}
.bcgovHF #carousel .page .content .wrapper div.alternate {
  float: right;
}
.bcgovHF #carousel .page .content .wrapper div h2 {
  font-size: 36px;
  font-weight: 600;
  padding: 0;
  margin-bottom: 9px;
  background: none;
  height: auto;
  color: #fff;
}
.bcgovHF #carousel .page .content .wrapper div span {
  font-size: 18px;
  font-weight: normal;
  line-height: 22px;
}
.bcgovHF #carousel .page .content .wrapper div a {
  font-size: 14px;
  font-weight: 600;
  margin-top: 20px;
  text-decoration: none;
  color: #fff;
  position: relative;
  padding-left: 15px;
  display: block;
}
.bcgovHF #carousel .page .content .wrapper div a:hover {
  text-decoration: underline;
  color: #b1bfd3;
}
.bcgovHF #carousel .page .content .wrapper div a:before {
  border: 5px solid transparent;
  border-left-color: #fff;
  content: '';
  height: 0;
  position: absolute;
  left: 0;
  top: 4px;
  width: 0;
}
.bcgovHF .topicThemeCarousel {
  position: relative;
  max-height: 220px;
}
.bcgovHF .topicThemeCarousel:empty {
  display: none;
}
.bcgovHF .topicThemeCarousel #carousel .page .background .wrapper {
  position: absolute;
  top: 0px;
  left: 0;
  width: 100%;
  max-height: 220px;
  overflow: hidden;
}
.bcgovHF .topicThemeCarousel #carousel .page .background .background-fade {
/* 	remove fade effect */
  display: none;
}
.bcgovHF .topicThemeCarousel #carousel {
/* 	padding-top: 0px; */
  max-height: 220px;
  margin-bottom: 25px;
  overflow: hidden;
}
.bcgovHF .topicThemeCarousel #carousel .constrained {
  margin-top: 0px;
}
.bcgovHF .topicThemeCarousel #carousel .page .content .wrapper div {
  min-width: 50%;
  max-width: 75%;
  width: auto;
  max-height: 198px;
  overflow: hidden;
}
.bcgovHF .topicThemeCarousel #carousel .page .content .wrapper div h2 {
  margin-top: 0px;
  font-size: 18px;
}
.bcgovHF .topicThemeCarousel #carousel .page .content .wrapper div span {
  font-size: 13px;
  line-height: 1em;
}
.bcgovHF .topicThemeCarousel #carousel .controls .back,
.bcgovHF .environment-qa .topicThemeCarousel #carousel .controls .back {
  margin-top: -75px;
  margin-left: 0px;
}
.bcgovHF .topicThemeCarousel #carousel .controls .forward,
.bcgovHF .environment-qa .topicThemeCarousel #carousel .controls .forward {
  margin-top: -75px;
  margin-right: 0px;
}
.bcgovHF .topicThemeCarousel #carousel .page .content .wrapper {
  padding: 0 50px;
}
.bcgovHF .environment-qa .topicThemeCarousel #carousel .page {
  top: 0px;
  max-height: 225px;
  overflow: hidden;
}
.bcgovHF #carousel .page .content .wrapper div a,
.bcgovHF #carousel .page .content .wrapper div a.pull-left {
  text-decoration: underline;
}
@media (max-width: 767px) {
  .bcgovHF #carousel {
    padding-top: 180px;
  }
  .bcgovHF .environment-qa #carousel .page {
    top: 0;
  }
  .bcgovHF #carousel .page .background .wrapper {
    top: 0;
    overflow: hidden;
  }
  .bcgovHF #carousel .page .background .wrapper img {
    height: 100%;
    width: 100%;
  }
  .bcgovHF #carousel .page .content {
    margin-top: 40px;
  }
  .bcgovHF #carousel .page .content .wrapper {
    top: 0;
  }
  .bcgovHF #carousel .page .content .wrapper div {
    height: 225px;
    padding: 15px;
    width: 100%;
  }
  .bcgovHF #carousel .page .content .wrapper div h2 {
    font-size: 26px;
    font-weight: 600;
    height: auto;
    margin-bottom: 10px;
  }
  .bcgovHF #carousel .page .content .wrapper div span {
    font-size: 14px;
  }
  .bcgovHF #carousel .page .content .wrapper div a {
    margin-top: 15px;
  }
  .bcgovHF #carousel .controls {
    top: 25px;
    float: right;
    width: 100px;
  }
  .bcgovHF #carousel .controls .back,
  .bcgovHF #carousel .controls .forward {
    position: relative;
    margin: 0;
  }
  .bcgovHF .topicThemeCarousel #carousel .page .content .wrapper {
    padding: 0px;
    margin-top: -50px;
  }
  .bcgovHF .topicThemeCarousel #carousel .page .content .wrapper div {
    min-width: 100%;
    max-width: 100%;
    padding-top: 25px;
    min-height: 220px;
  }
}
@media (max-width: 1200px) {
  .bcgovHF .contentPageMainColumn.col-sm-9.col-md-5.col-lg-6 .topicThemeCarousel #carousel .page .content .wrapper div {
    height: 220px;
    max-height: 220px;
    width: 100%;
    max-width: 100%;
    padding: 25px 45px 0 45px;
  }
  .bcgovHF .contentPageMainColumn.col-sm-9.col-md-5.col-lg-6 .topicThemeCarousel #carousel .page {
    top: -10px;
  }
  .bcgovHF .contentPageMainColumn.col-sm-9.col-md-5.col-lg-6 .topicThemeCarousel #carousel .page .background {
    display: none;
  }
  .bcgovHF .contentPageMainColumn.col-sm-9.col-md-5.col-lg-6 .topicThemeCarousel #carousel .page .content .wrapper {
    padding: 0;
  }
  .bcgovHF .contentPageMainColumn.col-sm-9.col-md-5.col-lg-6 .topicThemeCarousel #carousel .constrained {
    z-index: 99;
  }
}
@media print {
  .bcgovHF #carousel {
    display: block;
    position: relative;
/* 		margin-top:75px; */
/* 		margin-bottom:-75px; */
    padding: 10px 0 0 0;
    height: 150px;
    overflow: hidden;
  }
  .bcgovHF #carousel .page {
    position: relative;
  }
  .bcgovHF #carousel .page .content {
    position: relative;
    margin: 0;
  }
  .bcgovHF .constrained {
    padding: 0;
  }
  .bcgovHF #carousel .page .content .wrapper {
    position: relative;
    top: 10px;
    padding: 0;
  }
  .bcgovHF #carousel .page .background .wrapper img {
    display: none;
  }
  .bcgovHF #carousel .controls {
    display: none;
  }
  .bcgovHF #carousel .page .content .wrapper div h2 {
    position: relative;
  }
  .bcgovHF #carousel .page .content .wrapper div {
    width: 100%;
    padding: 0;
    overflow: visible;
    display: block;
  }
}
.bcgovHF .imageSliderDiv:hover {
  cursor: pointer;
}
